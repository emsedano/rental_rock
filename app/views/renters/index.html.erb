<p id="notice"><%= notice %></p>

<h1>Listing Renters</h1>

<table>
  <thead>
    <tr>
      <th>Firstname</th>
      <th>Lastname</th>
      <th>Second lastname</th>
      <th>Genre</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Mobile</th>
      <th>Born</th>
      <th>Require invoice</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @renters.each do |renter| %>
      <tr>
        <td><%= renter.firstname %></td>
        <td><%= renter.lastname %></td>
        <td><%= renter.second_lastname %></td>
        <td><%= renter.genre %></td>
        <td><%= renter.email %></td>
        <td><%= renter.phone %></td>
        <td><%= renter.mobile %></td>
        <td><%= renter.born %></td>
        <td><%= renter.require_invoice %></td>
        <td><%= link_to 'Show', renter %></td>
        <td><%= link_to 'Edit', edit_renter_path(renter) %></td>
        <td><%= link_to 'Destroy', renter, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

